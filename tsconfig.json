{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "moduleResolution": "node",
        "baseUrl": "src",
        "esModuleInterop": true,
        "jsx": "react",
        "strictPropertyInitialization": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "removeComments": true
    },
    "include": [
        "src"
    ]
}
